            <view>
                <text class='etc-text'>本月收入</text>
                <text>0.00</text>
            </view>
        </view>
    </view>
    <view class='make-cost'>
        <text class='make-cost-text' catchtap='addCost'>我要记账</text>
        <text class='make-get-text'>长按记一笔收入</text>
    </view>
    <view class='recent-cost'>
        <view class='recent-top'>
            <text>最近收支明细</text>
            <text class='more'>more>></text>
        </view>
        <view class='henxian'></view>
        <template is="recentListTemplate" />
