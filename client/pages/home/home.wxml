            <image src='/images/tab/money.png'></image>
            <text catchtap='login'>登录, 晚上好</text>
        </view>
        <view wx:else class='top-left'>
            <image src='{{userInfo.avatarUrl}}'></image>
            <text>{{userInfo.nickName}}, 晚上好</text>
