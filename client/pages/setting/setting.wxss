/* pages/setting/setting.wxss */

page{height:100%}

.container{
    display: flex;
    flex-direction: column;
    width:100%;
    height:100%;
    align-items: flex-start;
    background-color: #ebebeb;
    z-index: -1;
}

.user-info{
    margin-top: 40rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: #fff;
    width: 100%;
    height:140rpx;
}
.user-info image{
    margin-left: 30rpx;
    width: 100rpx;
    height:100rpx;
    border-radius: 100rpx;
}
.user-info text{
    font-size: 35rpx;
    color: #000;
    margin-left: 30rpx;
}

.menu{
    margin-top: 60rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
}
.menu view{
    background-color: #fff;
    border-bottom: 1rpx #6666 solid;
    height:60rpx;
    display: flex;
    flex-direction: row;
    padding:30rpx;
    line-height: 60rpx;
    margin-top: 20rpx;
}

.menu view text{
    font-size: 26rpx;
    margin-left: 20rpx;
}

.menu view image{
    width:60rpx;
    height:60rpx;
}