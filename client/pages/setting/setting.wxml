<!--pages/setting/setting.wxml-->
<view class="container">
    <view class="user-info">
        <image class='user-avatar' src="{{userInfo.avatarUrl}}"></image>
        <text class="user-name">{{userInfo.nickName}}</text>
    </view>

    <view class="menu">
        <view catchtap="incomeType">
            <image class="menu-image" src="/images/tab/income.png"></image>
            <text>收入类型设置</text>
        </view>
        <view catchtap="costType">
            <image class="menu-image" src="/images/tab/cost.png"></image>
            <text>支出类型设置</text>
        </view>
        <view catchtap="feedback">
            <image class="menu-image" src="/images/tab/feedback.png"></image>
            <text>反馈</text>
        </view>
    </view>
</view>