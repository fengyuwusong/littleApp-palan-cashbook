page{
    height:100%;
    background-color: #ebebeb;
}

.menu{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
}
.menu .fir-menu{
    background-color: #fff;
    border-bottom: 1rpx #6666 solid;
    height:40rpx;
    display: flex;
    flex-direction: row;
    padding:30rpx;
    line-height: 40rpx;
    margin-top: 30rpx;
    justify-content: space-between;
}

.menu .fir-menu text{
    color: #000;
    font-size: 30rpx;
    margin-left: 20rpx;
}
