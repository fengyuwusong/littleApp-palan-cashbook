 .add{
    width: 100%;
    background-color: #fff;
    border-bottom: 1rpx #6666 solid;
    height:30rpx;
    display: flex;
    flex-direction: row;
    padding:30rpx;
    line-height: 30rpx;
    margin-top: 30rpx;
    justify-content: center;
}

.add text{
    font-size: 50rpx;
    color: #333;
}

.menu .sec-menu{
    display: flex;
    flex-direction: column;
}
.menu .sec-menu view{
    background-color: #f8f8f8;
    border-bottom: 1rpx #6666 solid;
    justify-content: space-between;
    display: flex;
    flex-direction: row;
    height:30rpx;
    line-height: 20rpx;
    align-items: center;
    padding:30rpx;
}

.menu .sec-menu view text{
    color: #000;
    font-size: 26rpx;
    margin-left: 100rpx;
}